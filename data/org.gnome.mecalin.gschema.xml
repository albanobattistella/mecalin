<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.mecalin" path="/org/gnome/mecalin/">
    <key name="current-lesson" type="u">
      <default>1</default>
      <summary>Current lesson</summary>
      <description>The current lesson number the user is on</description>
    </key>
    <key name="current-step" type="u">
      <default>1</default>
      <summary>Current step</summary>
      <description>The current step within the lesson</description>
    </key>

    <child name="state" schema="org.gnome.mecalin.state"/>
  </schema>

  <schema id="org.gnome.mecalin.state" path="/org/gnome/mecalin/state/">
    <child name="window" schema="org.gnome.mecalin.state.window"/>
  </schema>

  <schema id="org.gnome.mecalin.state.window" path="/org/gnome/mecalin/state/window/">
    <key name="maximized" type="b">
      <default>false</default>
    </key>

    <key name="size" type="(ii)">
      <default>(1024, 768)</default>
    </key>
  </schema>
</schemalist>
