<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="LessonView" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="spacing">24</property>
    <property name="margin-top">24</property>
    <property name="margin-bottom">24</property>
    <property name="margin-start">24</property>
    <property name="margin-end">24</property>
    <child>
      <object class="GtkLabel" id="lesson_title">
        <property name="halign">center</property>
        <style>
          <class name="title-1"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="lesson_description">
        <property name="halign">center</property>
        <property name="wrap">true</property>
        <property name="justify">center</property>
        <style>
          <class name="body"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vscrollbar-policy">never</property>
        <property name="hscrollbar-policy">never</property>
        <property name="height-request">60</property>
        <child>
          <object class="GtkTextView" id="target_text_view">
            <property name="editable">false</property>
            <property name="cursor-visible">true</property>
            <property name="wrap-mode">word</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <style>
              <class name="monospace"/>
              <class name="card"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="MecalinTextView" id="text_view">
        <property name="halign">center</property>
        <property name="width-request">400</property>
        <property name="height-request">100</property>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="keyboard_container">
        <property name="orientation">vertical</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
      </object>
    </child>
  </template>
</interface>
